{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}


    <div class="content">

        <h1>Conference</h1>
        <ul>
            {% for conference in conferences %}
                <a href="{{ path('details_conferences', { 'id': conference.id }) }}">{{ conference.title }}</a>
                <li>{{ conference.content }}</li>
                <br>
                {% if conference.user %}
                    <li>{{ conference.user.id }}</li>
                    <li>{{ conference.user.firstname }}</li>
                {% endif %}
            {% endfor %}
        </ul>


    </div>
{% endblock %}