{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}

    <!-- Hero section -->
    <section class="hero-section set-bg" data-setbg="img/bg.jpg">
        <div class="container h-100">
            <div class="hero-content text-white">
                <div class="row">
                    <div class="col-lg-6 pr-0">
                        <h1>Membre</h1>
                        <table id="user" class="centre" border="2" align="center" cellspacing="0" cellpadding="2">
                            <tr>
                                <td>Nom</td>
                                <td>Prenom</td>
                                <td>Edition</td>
                                <td>Remove</td>
                            </tr>
                            {% for user in users %}
                                <tr>
                                    <td>{{user.firstname }}</td><br/>
                                    <td>{{user.lastname }}</td><br/>
                                    <td><a href="{{ path('update_user', {'byId':conference.id}) }}"><span class="glyphicon glyphicon-pencil"></span>Edit</a></td>
                                    <td><a href="{{ path('remove_user', {'id':conference.id}) }}"><span class="glyphicon glyphicon-trash"></span> Remove</a></td>
