                                        </td>
                                        <td><a href="{{ path('update_conference', {'byId':conference.id}) }}"><span class="glyphicon glyphicon-pencil"></span>Edit</a></td>
                                        <td><a href="{{ path('remove_conference', {'id':conference.id}) }}"><span class="glyphicon glyphicon-trash"></span> Remove</a></td>
                                        <br>
                                    </tr>
                                {% endfor %}
                            </table>
                            <div class="panel-body">
